<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head.ejs %>
  </head>
  <body class="nav-md">
    <div class="container body">
      <div class="main_container">
        <% include partials/navigation.ejs %>
        <div class="right_col" role="main">
          <div class="">
            <div class="page-title">
              <div class="title_left">
                <h3>Add Product</h3>
              </div>
            </div>
            <!--Báo lỗi-->
            <div class="content-error">
              <%if (message != undefined) {
              message.forEach(function (mes){%>
                <div
                        class="error"
                        style="background-color: #FFCCCC; font-weight: bold; color : rgb(210, 29, 29) "
                >
                  <%= mes%>
                </div>
              <%})}%>
                <!--/ Báo lỗi-->
            </div>
            <div class="clearfix"></div>
            <div class="row">
              <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                  <div class="x_title">
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">Settings 1</a>
                            <a class="dropdown-item" href="#">Settings 2</a>
                          </div>
                      </li>
                      <li><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    
                    <form action="/products/task/add" method="POST">
                      <div class="form-group row">
                        <label class="control-label col-md-3 col-sm-3 col-xs-3">Name</label>
                        <div class="col-md-9 col-sm-9 col-xs-9">
                          <input type="text" class="form-control" name="name" placeholder="Áo khoác Luôn Vui Tươi">
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="control-label col-md-3 col-sm-3 col-xs-3">Description</label>
                        <div class="col-md-9 col-sm-9 col-xs-9">
                          <input type="text" class="form-control" name="description" placeholder="Sản phẩm rất đẹp">
                        </div>
                      </div>
                      <div class="form-group row">
                      <label class="control-label col-md-3 col-sm-3 col-xs-3" for="">SubCategory</label>
                        <div class="col-md-9 col-sm-9 col-xs-9">
                        <select name="subCategory" class="form-control">
                          <option value="-1" selected>--Loại--</option>
                          <% categories.forEach(function(main){ %>
                              <% main.childName.forEach(function(sub){ %>
                                <option value="<%= sub._id %>"><%= sub.name %></option>
                              <% }); %>
                          <% }); %>
                        </select>
                        </div>                       
                      </div>
                      <div class="form-group row">
                      <label class="control-label col-md-3 col-sm-3 col-xs-3" for="">Label</label>
                        <div class="col-md-9 col-sm-9 col-xs-9">
                        <select name="label" class="form-control">
                          <option value="-1" selected>--Nhãn hiệu--</option>
                          <% labels.forEach(function(element){ %>
                            <option value="<%= element._id %>"><%= element.name %></option>
                          <% }); %>
                        </select>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="control-label col-md-3 col-sm-3 col-xs-3">Size</label>
                        <div class="col-md-9 col-sm-9 col-xs-9">
                          <input type="text" class="form-control" name="size" placeholder="S;M;L;XL;">
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="control-label col-md-3 col-sm-3 col-xs-3">Color</label>
                        <div class="col-md-9 col-sm-9 col-xs-9">
                          <input type="text" class="form-control" name="color" placeholder="xanh;đỏ;tím;vàng;">
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="control-label col-md-3 col-sm-3 col-xs-3">Material</label>
                        <div class="col-md-9 col-sm-9 col-xs-9">
                          <input type="text" class="form-control" name="material" placeholder="da;vải cotton;"> 
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="control-label col-md-3 col-sm-3 col-xs-3">Image</label>
                        <div class="col-md-9 col-sm-9 col-xs-9">
                          <input type="text" class="form-control" name="image" placeholder="imagelink1.abc;imagelink2.xyz;">
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="control-label col-md-3 col-sm-3 col-xs-3">Giá bán</label>
                        <div class="col-md-9 col-sm-9 col-xs-9">
                          <input type="text" class="form-control" name="price" placeholder="Giá tính theo $: 123">
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="control-label col-md-3 col-sm-3 col-xs-3">Giá nhập</label>
                        <div class="col-md-9 col-sm-9 col-xs-9">
                          <input type="text" class="form-control" name="cost" placeholder="Giá tính theo $: 111">
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="control-label col-md-3 col-sm-3 col-xs-3">Số lượng nhập(tồn kho)</label>
                        <div class="col-md-9 col-sm-9 col-xs-9">
                          <input type="text" class="form-control" name="stock" placeholder="Số lượng nhập: 100">
                        </div>
                      </div>
                      
                      <div class="form-group row">
                        <label class="control-label col-md-3 col-sm-3 col-xs-3">Giảm giá</label>
                        <div class="col-md-9 col-sm-9 col-xs-9">
                          <input type="text" class="form-control" name="sale" placeholder="Tính theo %: 20">
                        </div>
                      </div>
                      <div class="ln_solid"></div>
                      <button  type="submit" class="btn btn-primary">Update</button>
                      <a href="/products/list"><button type="button"  class="btn btn-success">Turn Back</button></a>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
          <!-- footer content -->
          <footer>
              <%- include('partials/footer.ejs') %>
          </footer>
          <!-- /footer content -->
        </div>
      </div>
      </div>
    </div>
  </body>
</html>