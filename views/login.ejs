<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head.ejs') %>
  </head>

  <body class="login">
    <div>
      <a class="hiddenanchor" id="signup"></a>
      <a class="hiddenanchor" id="signin"></a>

      <div class="login_wrapper">
        <div class="animate form login_form">
          <section class="login_content">
            <form action="/login" method="POST">
              <h1>Đăng nhập</h1>
              <div>
                <input type="text" class="form-control" placeholder="Tên đăng nhập" name="username" />
              </div>
              <div>
                <input type="password" class="form-control" placeholder="Mật khẩu" name="password" />
              </div>
              <div>
                <%if (message != "undefined") { %>
                  <div
                    class="form-group form-control error"
                    style="background-color: #FFCCCC; font-weight: bold; color : rgb(210, 29, 29)">
                    <%= message %>
                  </div>
                <% } %>
              </div>
              <div>
                <input class="btn btn-default submit" style="background-color:rgb(141, 140, 140); color:white; margin-left:140px" type="submit" value="Đăng nhập"/>
              </div>
              <div class="clearfix"></div>
            </form>
          </section>
        </div>
      </div>
    </div>
    
  </body>

</html>
