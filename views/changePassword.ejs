<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head.ejs') %>
  </head>

  <body class="login">
    <div>
      <div class="login_wrapper">
        <div class="animate form login_form">
          <section class="login_content">
            <form action="/change-password" method="POST">
              <h1>Đổi mật khẩu</h1>
              <div>
                <input type="text" class="form-control" placeholder="Tên đăng nhập" name="username" />
              </div>
              <div>
                <input type="password" class="form-control" placeholder="Mật khẩu cũ" name="password" />
              </div>
              <div>
                <input type="password" class="form-control" placeholder="Mật khẩu mới" name="newpass" />
              </div>
              <div>
                <input type="password" class="form-control" placeholder="Nhập lại mật khẩu mới" name="newpassagain" />
              </div>
              <div>
                <% if (message != "undefined") { %>
                  <div
                    class="form-group form-control error"
                    style="background-color: #FFCCCC; font-weight: bold; color : rgb(210, 29, 29)">
                    <%= message %>
                  </div>
                <% } %>
              </div>
              <div>
                <input type="submit" class="btn btn-warning" style="color:white" value="Thay đổi"/>
                <a href="/admin/detail"><button type="button"  class="btn btn-success">Quay lại</button></a>
              </div>
              <div class="clearfix"></div>
            </form>
          </section>
        </div>
      </div>
    </div>
    
  </body>
</html>
