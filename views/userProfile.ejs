<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head.ejs %>
  </head>
  <body>
    <body class="nav-md">
      <div class="container body">
        <div class="main_container">
          <%- include('partials/navigation.ejs') %>
          <!-- page content -->
          <div class="right_col" role="main">
            <div class="">
              <div class="page-title">
                <div class="title_left">
                  <h3>User Profile</h3>
                </div>
  
                <div class="title_right">
                  <div class="col-md-5 col-sm-5  form-group pull-right top_search">
                    <div class="input-group">
                      <input type="text" class="form-control" placeholder="Search for...">
                      <span class="input-group-btn">
                        <button class="btn btn-secondary" type="button">Go!</button>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="clearfix"></div>
  
              <div class="row">
                <div class="col-md-12 col-sm-12 ">
                  <div class="x_panel">
                    <div class="x_title">
                      <h2>Thông tin người dùng</h2>
                      <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                      <div class="col-md-3 col-sm-3  profile_left">
                        <div class="profile_img">
                          <div id="crop-avatar">
                            <!-- Current avatar -->
                            <img class="img-responsive avatar-view" src="images/picture.jpg" alt="Avatar" title="Change the avatar">
                          </div>
                        </div>
                        
  
                    </div>
                    <div style="font-size: 20px;" class="col-md-5">
                      <form action="/task/lock" method="POST">
                        <div class="container">
                          <h3><%= firstName + ' ' +lastName %></h3>
                          <input name="id" value="<%= id %>" hidden>
                          <div class="form-group row">
                            <label class="control-label col-md-3 col-sm-3 col-xs-3">Tên đăng nhập</label>
                            <label class="col-md-9 col-sm-9 col-xs-9"><%= username %></label>
                          </div>
                          <div class="form-group row">
                            <label class="control-label col-md-3 col-sm-3 col-xs-3">Số điện thoại</label>
                            <label class="col-md-9 col-sm-9 col-xs-9"><%= phoneNumber %></label>
                          </div>
                          <div class="form-group row">
                            <label class="control-label col-md-3 col-sm-3 col-xs-3">Email</label>
                            <label class="col-md-9 col-sm-9 col-xs-9"><%= email %></label>
                          </div>
                          <% if (isLocked == true){ %>
                            <div class="alert alert-danger"> Tài khoản hiện đang bị khóa <i class="fa fa-lock"></i></div>
                            <button type="submit" onclick="confirmUnlock()" class="btn btn-success"><i class="fa fa-key"></i>Mở Khóa</button>
                          <% }else{ %>
                            <div class="alert alert-success"> Tài khoản chưa bị khóa <i class="fa fa-unlock"></i></div>
                            <button type="submit" onclick="confirmLock()" class="btn btn-danger"><i class="fa fa-key"></i>Khóa</button>
                          <% } %>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- /page content -->
  
         
        </div>
      </div>
      <%- include('partials/footer.ejs') %>
    </footer>
    <%- include('partials/script.ejs') %>
    </body>
  
</html>