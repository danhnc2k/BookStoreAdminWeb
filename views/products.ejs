<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
</head>
    <body>
        <body class="nav-md">
        <div class="container body">
            <div class="main_container">
                <%- include('partials/navigation.ejs') %>
                <div class="right_col" role="main" style="min-height: 454px;">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 ">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2>Default Example <small>Users</small></h2>
    
                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="card-box table-responsive">
                                                <div class="tt-collapse open">
                                                    <h3 class="tt-collapse-title">Loại sản phẩm</h3>
                                                    <div class="tt-collapse-content">
                                                        <ul class="tt-list-row" id="product-maintype">
                                                            <% categories.forEach(function(main){ %>
                                                                <li><a href="/products/<%= main._id %>"><%= main.name %></a></li>
                                                                <div class="tt-collapse-content">
                                                                    <ul class="tt-list-row" id="product-subtype">
                                                                        <% main.childName.forEach(function(sub){ %>
                                                                            <li><a href="/products/<%= main._id %>/<%= sub._id %>"><%= sub.name %></a></li>
                                                                        <% }); %>
                                                                    </ul>
                                                                </div>
                                                            <% }); %>
                                                        </ul>
                                                    </div>
                                                </div>
                                                <form method="GET">
                                                    <div>
                                                        <input type="text" class="form-group" name="search" value="<%= searchValue %>" placeholder="Search for...">
                                                        <a href="?search=<%= searchValue %>&price=<%= priceValue %>&size=<%= sizeValue %>&label=<%= labelValue %>&length=<%= lengthValue %>&page=<%= currentPage %>">
                                                            <button class="btn btn-secondary" type="submit"><i class="fa fa-search"></i>Search</button>
                                                        </a>
                                                        <h3 class="tt-collapse-title">Giá</h3>
                                                        <div class="input-select" >
                                                            <select name="price">
                                                                <% if (priceValue) { %>
                                                                    <option value ="-1">All</option>
                                                                <% } else { %>
                                                                    <option value ="-1" selected>All</option>
                                                                <% } %>
                                                                <% var index; for (index = 0; index < prices.length; index++){ %>
                                                                    <% if (priceValue == index) { %>
                                                                        <option value="<%= index %>" selected>$<%= prices[index][0] %> — $<%= prices[index][1] %></option>
                                                                    <% } else { %>
                                                                        <option value="<%= index %>">$<%= prices[index][0] %> — $<%= prices[index][1] %></option>
                                                                    <% } %>
                                                                <% } %>
                                                                <% if (priceValue == index) { %>
                                                                    <option value="<%= index %>" selected> $<%= prices[index - 1][1] %></option>
                                                                <% } else { %>
                                                                    <option value="<%= index %>"> $<%= prices[index - 1][1] %></option>
                                                                <% } %>
                                                            </select>
                                                        </div>
                                                        <h3 class="tt-collapse-title">Kích thước</h3>
                                                        <div class="input-select" >
                                                            <select name="size">
                                                                <% if (sizeValue) { %>
                                                                    <option value ="-1">All</option>
                                                                <% } else { %>
                                                                    <option value ="-1" selected>All</option>
                                                                <% } %>
                                                                <% var index; for (index = 0; index < sizes.length; index++){ %>
                                                                    <% if (sizeValue == index) { %>
                                                                        <option value="<%= index %>" selected><%= sizes[index] %></option>
                                                                    <% } else { %>
                                                                        <option value="<%= index %>"><%= sizes[index] %></option>
                                                                    <% } %>
                                                                <% } %>
                                                            </select>
                                                        </div>
                                                        <h3 class="tt-collapse-title">Thương Hiệu</h3>
                                                        <div class="input-select" >
                                                            <select name="label">
                                                                <% if (labelValue) { %>
                                                                    <option value ="-1">All</option>
                                                                <% } else { %>
                                                                    <option value ="-1" selected>All</option>
                                                                <% } %>
                                                                <% var index; for (index = 0; index < labels.length; index++){ %>
                                                                    <% if (labelValue == index) { %>
                                                                        <option value="<%= index %>" selected><%= labels[index].name %></option>
                                                                    <% } else { %>
                                                                        <option value="<%= index %>"><%= labels[index].name %></option>
                                                                    <% } %>
                                                                <% } %>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div id="datatable_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap no-footer">
                                                        <div class="row">
                                                            <div class="col-sm-6">
                                                                <div class="dataTables_length" id="datatable_length">
                                                                    <label>
                                                                        Show
                                                                        <select name="length" aria-controls="datatable" class="form-control input-sm">
                                                                            <% var index; for (index = 0; index < lengths.length; index++){ %>
                                                                                <% if (lengthValue == index) { %>
                                                                                    <option value="<%= index %>" selected><%= lengths[index] %></option>
                                                                                <% } else { %>
                                                                                    <option value="<%= index %>"><%= lengths[index] %></option>
                                                                                <% } %>
                                                                            <% } %>
                                                                        </select> entries
                                                                    </label>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <button type="submit" class="btn btn-primary btn-sm">Lọc</button>
                                                </form>
                                                
                                                <div>
                                                    <button type="button" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> Thêm</button>
                                               <button type="button" class="btn btn-success btn-sm"> <i class="fa fa-trash">
                                               </i></button>
                                                </div>
                                                
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <table id="datatable" class="table table-striped table-bordered dataTable no-footer" style="width:100%" role="grid" aria-describedby="datatable_info">
                                                                <thead>
                                                                <tr role="row">
                                                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 128px;">
                                                                        Name
                                                                    </th>
                                                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 210px;">
                                                                        Stock
                                                                    </th>
                                                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 93px;">
                                                                        Price
                                                                    </th>
                                                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 42px;">
                                                                        dateAdded
                                                                    </th>
                                                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 85px;">
                                                                        Sale
                                                                    </th>
                                                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 71px;">
                                                                        Doing
                                                                    </th>
                                                                </tr>
                                                                </thead>
    
    
                                                                <tbody>
                                                                <% allProducts.forEach(function(product){%>
                                                                <tr>
                                                                    <td><%= product.name %></td>
                                                                    <td><%= product.stock %></td>
                                                                    <td><%= product.price %></td>
                                                                    <td><%= product.dateAdded%></td>
                                                                    <td><%= product.sale %></td>
                                                                    <td>
                                                                        <a href="product/<%= product._id %>"><button type="button" class="btn btn-primary btn-sm"><i class="fa fa-edit"></i>Edit</button></a>
                                                                    </td>
                                                                </tr>
                                                                <% }); %>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-5">
                                                            <div class="dataTables_info" id="datatable_info" role="status" aria-live="polite">Total result: <%= totalProducts %></div>
                                                        </div>
                                                        <div class="col-sm-7">
                                                            <nav aria-label="Page navigation example">
                                                                <ul class="pagination justify-content-end">
                                                                    <li class="page-item"><a class="page-link" href="?search=<%= searchValue %>&price=<%= priceValue %>&size=<%= sizeValue %>&label=<%= labelValue %>&length=<%= lengthValue %>&page=1">First Page</a></li>
                                                                    <% if(hasPrevPage){ %>
                                                                    <li class="page-item"><a class="page-link" href="?search=<%= searchValue %>&price=<%= priceValue %>&size=<%= sizeValue %>&label=<%= labelValue %>&length=<%= lengthValue %>&page=<%= prevPage %>">Previous</a></li>
                                                                    <li class="page-item"><a class="page-link" href="?search=<%= searchValue %>&price=<%= priceValue %>&size=<%= sizeValue %>&label=<%= labelValue %>&length=<%= lengthValue %>&page=<%= currentPage - 1 %>"><%= currentPage - 1 %></a></li>
                                                                    <% } %>
                                                                    <li class="page-item active"><a class="page-link" href="?search=<%= searchValue %>&price=<%= priceValue %>&size=<%= sizeValue %>&label=<%= labelValue %>&length=<%= lengthValue %>&page=<%= currentPage %>"><%= currentPage %></a></li>
                                                                    <% if(hasNextPage){ %>
                                                                    <li class="page-item"><a class="page-link" href="?search=<%= searchValue %>&price=<%= priceValue %>&size=<%= sizeValue %>&label=<%= labelValue %>&length=<%= lengthValue %>&page=<%= currentPage + 1 %>"><%= currentPage + 1 %></a></li>
                                                                    <li class="page-item"><a class="page-link" href="?search=<%= searchValue %>&price=<%= priceValue %>&size=<%= sizeValue %>&label=<%= labelValue %>&length=<%= lengthValue %>&page=<%= nextPage %>">Next</a></li>
                                                                    <% } %>
                                                                    <li class="page-item"><a class="page-link" href="?search=<%= searchValue %>&price=<%= priceValue %>&size=<%= sizeValue %>&label=<%= labelValue %>&length=<%= lengthValue %>&page=<%= totalPages %>">Last Page</a></li>
                                                                </ul>
                                                            </nav>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
        </body>
    <footer>
        <%- include('partials/footer.ejs') %>
    </footer>
    </body>
  
</html>