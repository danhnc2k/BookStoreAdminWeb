<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head.ejs %>
  </head>
  <body class="nav-md">
    <div class="container body">
      <div class="main_container">
        <% include partials/navigation.ejs %>
        <div class="right_col" role="main">
          <div class="">
            <div class="page-title">
              <div class="title_left">
                <h3>Add SubCategory</h3>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="row">
              <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                  <div class="x_title">
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <form class="form-group" action="/products/task/addcategory" method="POST" name="form" onchange="verifySubCate(this.form)">
                      <div class="col-md-3 col-sm-3">
                        <select name="mainCategory" class="form-control">
                          <% categories.forEach(function(main){ %>
                            <option value="<%= main._id %>" selected><%= main.name %></option>
                          <% }); %>
                        </select>
                      </div>
                      <div class="form-group row">
                        <label class="control-label col-md-3 col-sm-3 col-xs-3">SubCategory</label>
                        <div class="col-md-9 col-sm-9 col-xs-9">
                          <input type="text" class="form-control" name="subCategory" id="subCategory" placeholder="Túi xách" oninput="check(this.id)">
                          <h4 style="color:red; font-style:italic" id="notificationsubCategory"></h4>
                        </div>
                      </div>
                      <div class="ln_solid"></div>
                      <button  type="submit" id="btn-update" class="btn btn-primary"  hidden>Update</button>
                      <a href="/products/list"><button type="button"  class="btn btn-success">Turn Back</button></a>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
          <!-- footer content -->
          <footer>
              <%- include('partials/footer.ejs') %>
          </footer>
          <!-- /footer content -->
        </div>
      </div>
      </div>
    </div>
    <%- include('partials/script.ejs') %>
  </body>
</html>