<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head.ejs %>
  </head>
  <body class="nav-md">
    <div class="container body">
      <div class="main_container">
        <% include partials/navigation.ejs %>
        <div class="right_col" role="main">
          <div class="">
            <div class="page-title">
              <div class="title_left">
                <h3>E-commerce :: Product Page</h3>
              </div>
              <div class="title_right">
                <div class="col-md-5 col-sm-5  form-group pull-right top_search">
                  <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Go!</button>
                    </span>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="clearfix"></div>
            <div class="row">
              <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>E-commerce page design</h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">Settings 1</a>
                            <a class="dropdown-item" href="#">Settings 2</a>
                          </div>
                      </li>
                      <li><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <div class="col-md-5">
                      <div class="product-images">
                        <% var index; for (index = 0; index < imagesURL.length; index++){ %>
                          <a>
                            <img src="../images/product/<%= imagesURL[index] %>" alt="..." / width="500" height="600">
                          </a>
                        <% } %>
                      </div>
                    </div>
                    <div class="col-md-5">
                      <div class="container">
                        <h3 align="center">Update Product</h3>
                        <hr>
                            <form action="/detail/update" method="POST">
                              <div class="form-group">
                                <label for="">ID</label>
                                <input type="text" class="form-control" name="id" value="<%= id %>" readonly>
                              </div>
                              <div class="form-group">
                                <label for="">Name</label>
                                <input type="text" class="form-control" name="name" value="<%= name %>">
                              </div>
                              <div class="form-group">
                                <label for="">Description</label>
                                <input type="text" class="form-control" name="description" value="<%= description %>">
                              </div>
                              <label for="">SubCategory</label>
                              <div class="input-select">
                                <select name="subCategory">
                                  <% categories.forEach(function(main){ %>
                                      <% main.childName.forEach(function(sub){ %>
                                        <% if (sub._id == subCategory){ %>
                                          <option value="<%= sub._id %>" selected><%= sub.name %></option>
                                        <% }else{ %>
                                          <option value="<%= sub._id %>"><%= sub.name %></option>
                                        <% } %>
                                      <% }); %>
                                  <% }); %>
                                </select>
                              </div>
                              <label for="">Label</label>
                              <div class="input-select">
                                <select name="label">
                                  <% labels.forEach(function(element){ %>
                                    <% if (element._id == label){ %>
                                        <option value="<%= element._id %>" selected><%= element.name %></option>
                                    <% }else{ %>
                                        <option value="<%= element._id %>"><%= element.name %></option>
                                    <% } %>
                                  <% }); %>
                                </select>
                              </div>
                              <div class="form-group">
                                <label for="">Sizes</label>
                                <input type="text" class="form-control" name="size" value="<%= sizes %>">
                                
                              </div>
                              <div class="form-group">
                                <label for="">Colors</label>
                                <input type="text" class="form-control" name="color" value="<%= colors %>">
                                
                              </div>
                              <div class="form-group">
                                <label for="">Materials</label>
                                <input type="text" class="form-control" name="material" value="<%= materials %>">
                                
                              </div>
                              <div class="form-group">
                                <label for="">Image Link</label>
                                <input type="text" class="form-control" name="image" value="<%= images %>">
                              </div>
                              <div class="form-group">
                                <label for="">Price</label>
                                <input type="text" class="form-control" name="price" value="<%= price %>">
                              </div>
                              <div class="form-group">
                                <label for="">Stock</label>
                                <input type="text" class="form-control" name="stock" value="<%= stock %>">
                              </div>
                              <div class="form-group">
                                <label for="">Buy Count</label>
                                <input type="text" class="form-control" name="buyCount" value="<%= buyCount %>">
                              </div>
                              <button style="float: left;" type="submit" class="btn btn-primary">Update</button>
                            </form>
                          <form action="/products" method="GET">
                            <button type="submit" style="float: right;" class="btn btn-success">Turn Back</button>
                          </form>
                        </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
          <!-- footer content -->
          <footer>
              <%- include('partials/footer.ejs') %>
          </footer>
          <!-- /footer content -->
        </div>
      </div>
      </div>
    </div>
  </body>
</html>
